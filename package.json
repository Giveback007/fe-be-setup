{
  "name": "puelkcub",
  "version": "1.0.0",
  "main": "index.js",
  "license": "",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "common"
  ],
  "scripts": {
    "start": "concurrently \"npm:frontend\" \"npm:backend\" -k --kill-others-on-fail -p \"{name}|\" -n \"FE,BE\" -c \"blue,green\"",
    "start-old": "concurrently \"npm:mongo-db\" \"npm:tsc\" \"npm:nodemon\" -k --kill-others-on-fail -p \"{name}|\" -n \"DB  ,TSC ,NODE\" -c \"cyan,blue,green\"",
    "frontend": "node esbuild.serve.js",
    "backend": "nodemon"
  },
  "devDependencies": {
    "browser-sync": "^2.27.4",
    "concurrently": "^6.2.1",
    "esbuild-plugin-sass": "^0.6.0",
    "esbuild-register": "^3.0.0",
    "esbuild": "^0.12.22",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5"
  }
}
