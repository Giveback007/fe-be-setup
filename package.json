{
  "name": "puelkcub",
  "version": "1.0.0",
  "main": "index.js",
  "license": "",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "common"
  ],
  "scripts": {
    "start": "concurrently \"npm:frontend\" \"npm:backend\" -k --kill-others-on-fail -p \"{name}|\" -n \"FE,BE\" -c \"blue,green\"",
    "frontend": "node esbuild.serve.js",
    "backend": "nodemon",
    "build:frontend": "node esbuild.build.js frontend && workbox generateSW workbox-config.js",
    "build:backend": "node esbuild.build.js backend",
    "kill-all-node": "taskkill /F /IM node.exe"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.26.2",
    "browser-sync": "^2.27.4",
    "concurrently": "^6.2.1",
    "esbuild": "^0.12.22",
    "esbuild-plugin-sass": "^0.6.0",
    "esbuild-register": "^3.0.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.3.5",
    "workbox-cli": "^6.2.4"
  }
}
